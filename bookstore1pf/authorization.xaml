<Page x:Class="bookstore1pf.authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bookstore1pf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="authorization">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="150">
            <TextBlock Text="Логин:"></TextBlock>
            <TextBox x:Name="loginBox"></TextBox>
            <TextBlock Text="Пароль:"></TextBlock>
            <TextBox x:Name="passwordBox"></TextBox>
            <Button Content="Войти" Name="Authorization" Click="Authorization_Click" Margin="0 10 0 0"></Button>
            <Button Content="Назад" Name="back" Click="back_Click" Margin="0 10 0 0"></Button>
        </StackPanel>
    </Grid>
</Page>
