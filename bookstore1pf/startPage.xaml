<Page x:Class="bookstore1pf.startPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bookstore1pf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="startPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="registration" Content="Зарегистрироваться" Click="registration_Click"></Button>
            <Button x:Name="authorization" Content="Войти" Click="authorization_Click" Margin="0 20 0 0"></Button>
        </StackPanel>
    </Grid>
</Page>
